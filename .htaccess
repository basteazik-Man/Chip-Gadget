RewriteEngine On

# Правильные MIME types для Beget
<FilesMatch "\.(js|mjs)$">
    Header set Content-Type "application/javascript"
</FilesMatch>

<FilesMatch "\.css$">
    Header set Content-Type "text/css"
</FilesMatch>

<FilesMatch "\.(ico|png|jpg|jpeg|gif|svg)$">
    Header set Content-Type "image/%{REQUEST_URI:e}"
</FilesMatch>

<FilesMatch "\.(woff|woff2|ttf|eot)$">
    Header set Content-Type "font/%{REQUEST_URI:e}"
</FilesMatch>

# Основные rewrite правила
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule . /index.html [L]

# Кэширование для статических файлов
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
</FilesMatch>